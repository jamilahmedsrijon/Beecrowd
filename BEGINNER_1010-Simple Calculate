int main()
{
    int pcode1, punit1;
    double price1;
    scanf("%d %d %lf", &pcode1, &punit1, &price1 );
    int pcode2, punit2;
    double price2;
    scanf("%d %d %lf", &pcode2, &punit2, &price2);
    double  product1 = punit1 * price1;
    double  product2 = punit2 * price2;
    double  total = product1 + product2;
    printf("VALOR A PAGAR: R$ %.2lf\n",total);


    return 0;
}
